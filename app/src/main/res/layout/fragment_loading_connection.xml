<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ehealth.evek.mobile.frontend.LoadingConnectionFragment">

    <ProgressBar
        android:id="@+id/pb_loadConnection"
        style="?android:attr/progressBarStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loadConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/desc_fragment_loading_connection_tv_init_connection"
        android:text="@string/content_fragment_loading_connection_tv_init_connection"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_loadConnection" />

    <TextView
        android:id="@+id/tv_loadConnection_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:contentDescription="@string/desc_fragment_loading_connection_tv_init_connection_count"
        android:text="(1/50)"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_loadConnection"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>